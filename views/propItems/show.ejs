<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div>
            <div class="thumbnail">
                <img class="img-responsive" src="<%= propItem.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">Starting at: <%= propItem.startingBid %> US Dollars</h4>
                    <h4><a href=""><%= propItem.name %></a></h4>
                    <p><%= propItem.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/props/<%= propItem._id %>/comments/new">Ask A Question</a>
                </div>
                <hr>
                <% propItem.comments.forEach(function(comment) { %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author %></strong>
                        <span class="pull-right">10 days ago</span>
                        <p><%= comment.text %></p>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
