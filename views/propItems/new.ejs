<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Auction a new item</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/props" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name" required >
                </div>
                <div class="form-group">
                   <input class="form-control" type="text" name="description" placeholder="Description" required >
               </div>
               <div class="form-group">
                   <input class="form-control" type="text" name="startingBid" placeholder="Starting Bid" required >
               </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image1" placeholder="Primary Image URL" required >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image2" placeholder="Secondary Image URL" required >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image3" placeholder="Movie Image URL" required >
                </div>
                <div class="form-group">
                    <input class="form-control" name="expiryDate" type="text" id="datepicker" required placeholder="Item Expiry Date">                
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/props">Go Back</a>
        </div>
    </div>
</div>

<script>
  $( function() {
    $( "#datepicker" ).datepicker();
  } );
</script>

<% include ../partials/footer %>
